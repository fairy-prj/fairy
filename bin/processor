#!/usr/bin/env ruby
# encoding: UTF-8

require "optparse"
begin
  require 'irb/src_encoding'
  require "irb/magic-file"
rescue
end
require "irb/locale"

require "deep-connect/deep-connect"

require "fairy/share/base-app"
require "fairy/share/conf"
require "fairy/processor"

$0 = "fairy processor #{ARGV.join(' ')}"

Thread.abort_on_exception = Fairy::CONF.DEBUG_THREAD_ABORT_ON_EXCEPTION

if Fairy::CONF.USE_RESOLV_REPLACE
  require "resolv-replace"
end

module Fairy
  LC_MESSAGES = IRB::Locale.new
  LC_MESSAGES.load(CONF.LIB+"/fairy/share/exceptions.rb")
  class ProcessorAPP<BaseAPP
    def initialize
      super
      @node_port = nil
      @id = nil
      @debug_trace = Fairy::CONF.DEBUG_PROCESSOR_TRACE_ON
    end

    def option_parser
      super do |opt|
	opt.on("--node=VAL"){|val| @node_port = val}
	opt.on("--id=VAL"){|val| @id = val.to_i}
	opt.on("--debug_trace[=VAL]") do |val| 
	  val = true unless val
	  if ["FALSE", "OFF"].include?(val.upcase)
	    val = false
	  else
	    val = true
	  end
          @debug_trace = val
	end
      end
    end
    
    def start
      Fairy::Processor.start(@id, @node_port)
      if @debug_trace
	Log::info(self, "DEBUG TRACE ON")
	require "share/tr"
      end
    end
  end
end

Fairy::ProcessorAPP.start

sleep

