#!/usr/bin/env ruby
# encoding: UTF-8

require "optparse"
begin
  require 'irb/src_encoding'
  require "irb/magic-file"
rescue
end
require "irb/locale"

require "deep-connect/deep-connect"

require "fairy/share/base-app"
require "fairy/share/conf"
require "fairy/controller"

$0 = "fairy controller #{ARGV.join(' ')}"

Thread.abort_on_exception = Fairy::CONF.DEBUG_THREAD_ABORT_ON_EXCEPTION

if Fairy::CONF.USE_RESOLV_REPLACE
  require "resolv-replace"
end

module Fairy

  LC_MESSAGES = IRB::Locale.new
  LC_MESSAGES.load(CONF.LIB+"/fairy/share/exceptions.rb")
  class ControllerAPP<BaseAPP
    def initialize
      super
      
      @master_port = Fairy::CONF.MASTER_PORT
      @id = nil
    end

    def option_parser
      super do |opt|
	opt.on("--master=VAL"){|val| @master_port = val}
	opt.on("--id=VAL"){|val| @id = val.to_i}
      end
    end

    def start
      Fairy::Controller.start(@id, @master_port)
    end
  end
end

Fairy::ControllerAPP.start
sleep
